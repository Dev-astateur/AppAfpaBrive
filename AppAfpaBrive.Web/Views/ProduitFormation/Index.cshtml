@model IEnumerable<AppAfpaBrive.BOL.ProduitFormation>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Liste des Produit de Formation </h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="ProduitFormation" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus-square"></i> &nbsp; Create New ProduitFormation
            </a>
        </div>
        <div class="col-6">
            <textarea placeholder="recherche par libelle de produit de formation" ></textarea>
           <input id="btnRecherche" type="button" value="Recherche" />
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Code Produit de Formation
                    </th>
                    <th>
                        Niveau Formation
                    </th>
                    <th>
                        LibelleProduitFormation
                    </th>
                    <th>
                        LibelleCourtFormation
                    </th>
                    <th>
                        FormationContinue
                    </th>
                    <th>
                        Formation Diplomante
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr id="ligne">
                    <td width="10%">@obj.CodeProduitFormation</td>
                    <td width="10%">@obj.NiveauFormation</td>
                    <td width="30%">@obj.LibelleProduitFormation</td>
                    <td width="30%">@obj.LibelleCourtFormation</td>
                    <td width="10%">@obj.FormationContinue</td>
                    <td width="10%">@obj.FormationDiplomante</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-route-Id="@obj.CodeProduitFormation" asp-action="Edit" class="btn btn-primary">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a asp-controller="Category" asp-route-Id="@obj.CodeProduitFormation" asp-action="Delete" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No Produit de Formation exists</p>
    }

</div>