@model AppAfpaBrive.Web.Models.GraphModel
@{
    ViewData["Title"] = "Graphiques";
}

<header>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    @*<script src="~/js/Jquery.js"></script>
    <script src="~/js/jquery-ui.js"></script>*@
</header>
<body>
    @Html.DropDownListFor(m => m.Month, new List<SelectListItem>{
        new SelectListItem{Text="Tous", Value="1"},
        new SelectListItem{Text="3 mois", Value="3"},
        new SelectListItem{Text="6 mois", Value="6"},
        new SelectListItem{Text="12 mois", Value="12"}
    }, new { @id = "filterMonth" })
    <br />
    @Html.TextBoxFor(m => m.Year, new { @id = "filterYear" })
    <br />
    @Html.TextBoxFor(m => m.NomEtablissement, new { @id = "filterEtablissement" })
    <br />
    @Html.TextBoxFor(m => m.NomOffreFormation, new { @id = "filterOffreFormation" })
    <br />
    @Html.HiddenFor(m => m.IdEtablissement, new { @id = "idEtablissement" })
    <br />
    @Html.HiddenFor(m => m.IdOffreFormation, new { @id = "idOffreFormation" })
    <br />
    <input type="submit" id="sub" onclick="onClickSubmit()" />
    <div id="chart_div"></div>
</body>

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>



<script type="text/javascript">
    function onClickSubmit() {
        google.charts.load('current', {
            packages: ['corechart', 'bar']
        });

        google.charts.setOnLoadCallback(LoadData);
    }
    function LoadData() {
        var FilterMonth = $('#filterMonth').val();
        var FilterYear = $('#filterYear').val() == null ? "" : $('#filterYear').val();
        var FilterEtablissement = $('#idEtablissement').val() == null ? "" : $('#idEtablissement').val();
        var FilterOffreFormation = $('#idOffreFormation').val() == null ? "" : $('idOffreFormation').val();

        $.ajax({
            url: 'GraphDatas',
            data: { filterMois: FilterMonth, filterYear: FilterYear, filterEtablissement: FilterEtablissement, filterOffreFormation: FilterOffreFormation },
            type: "GET",
            error: function (xhr, status, error) {
                var err = eval("(" + xhr.responseText + ")");
                toastr.error(err.message);
            },
            success: function (data) {
                GraphData(data);
                return false;
            }
        });
        return false;
    }
    function GraphData(data) {
        console.log(data);
        var dataArray = [
            ["Type De Contrat", "Nombre"],
            ['Cdi', data[0]['cdi']],
            ['Cdd', data[0]['cdd']],
            ['Alternance', data[0]['alternance']],
            ['Autres :', data[0]['autres']],
            ['Sans emploie', data[0]['sansEmploie']]
        ];
        var data = google.visualization.arrayToDataTable(dataArray);
        var options = {
            //title: 'Population of Largest Cities of Odisha ',
            chartArea: {
                width: '50%'
            },
            //colors: ['#b0120a', '#7b1fa2', '#ffab91', '#d95f02'],
            hAxis: {
                title: 'Type De Contrat',
            },
            vAxis: {
                title: 'Nombre',
            }
        };
        var chart = new google.visualization.ColumnChart(document.getElementById('chart_div'));
        chart.draw(data, options);
        return false;
    }

    $(function () {
        $("#filterEtablissement").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: 'AutoCompleteEtablissement',
                    data: { "prefix": request.term },
                    type: "POST",
                    success: function (data) {
                        response($.map(data, function (item) {
                            return {
                                label: item.nomEtablissement,
                                value: item.nomEtablissement,
                                data: item.idEtablissement
                            }
                        }))
                    },
                });
            },
            select: function (e, i) {
                $("#idEtablissement").val(i.item.data);
            },
            minLength: 1
        });

        $("#filterOffreFormation").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: 'AutoCompleteOffreFormation',
                    data: { "prefix": request.term },
                    type: "POST",
                    success: function (data) {
                        response($.map(data, function (item) {
                            return {
                                label: item.nomOffreFormation,
                                value: item.nomOffreFormation,
                                data: item.idOffreFormation
                            }
                        }))
                    },
                });
            },
            select: function (e, i) {
                $("#idOffreFormation").val(i.item.data);
            },
            minLength: 1
        });
    });
</script>





