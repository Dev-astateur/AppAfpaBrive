@model AppAfpaBrive.BOL.Beneficiaire

<script src="~/Scripts/jquery-1.7.1.min.js"></script>
@* second approach script *@
<script type="text/javascript">
    $(document).ready(function () {
        $("#Id").change(function () {
            var id = $("#Id").val();
            var booksDiv = $("#booksDiv");
            $.ajax({
                cache: false,
                type: "GET",
                url: "@(Url.RouteUrl("BooksByPublisherId"))",
                data: { "id": id },
                success: function (data) {
                    var result = "";
                    booksDiv.html('');
                    $.each(data, function (id, beneficaire) {
                        result += '<b> Nom : </b>' + beneficaire. + '<br/>' +
                            '<b> Prenom :</b>' + beneficaire.Author + '<br/>' +
                            '<b> Matricule :</b>' + beneficaire.Year + '<br/>';


                    });
                    booksDiv.html(result);
                },
                error: function (xhr, AJAXOptions, thrownError) {
                    alert('Failed to retrieve books.');
                }
            });
        });
    });
</script>

<div>
    @Html.LabelFor(model => model.NomBeneficiaire)
</div>
<div id="booksDiv">
