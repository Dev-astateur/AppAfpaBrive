@using Microsoft.AspNetCore.Identity
@using AppAfpaBrive.Web.Areas.Identity.Data
@inject SignInManager<AppAfpaBriveUser> SignInManager
@inject UserManager<AppAfpaBriveUser> UserManager
@{AppAfpaBriveUser user = null; }
<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
         user = await UserManager.FindByNameAsync(User.Identity.Name);
        //var user = await UserManager.GetUserAsync(User);
        //await LoadAsync(user);
    <li class="nav-item">
        
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Bonjour @user.Prenom @user.Nom !</a>
    </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Se déconnecter</button>
            </form>
        </li>
    }
    else
    {
        
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Se connecter</a>
        </li>
    }
</ul>
