@model AppAfpaBrive.Web.ModelView.PeeModelView

<div class="container">
    <div class="row">
        <form asp-action="EnregistrementPeeInfo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdPee" />
            <input type="hidden" asp-for="MatriculeBeneficiaire" />
            <input type="hidden" asp-for="IdTuteur" />
            <input type="hidden" asp-for="IdResponsableJuridique" />
            <input type="hidden" asp-for="IdEntreprise" />
            <input type="hidden" asp-for="IdOffreFormation" />
            <input type="hidden" asp-for="IdEtablissement" />
            <div class="form-group">
                <label asp-for="Remarques" class="control-label">Si vous avez des remarques, veuillez les saisir.</label>
                @Html.TextAreaFor(model => model.Remarques, new { @class = "form-control", @rows = 4 })
                <span asp-validation-for="Remarques" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Etat" class="control-label">Validation de la convention de stage</label>
                <div class="row">
                    <div class="col-6">@Html.RadioButtonFor(model => model.Etat, "0") Non Valide</div>
                    <div class="col-6">@Html.RadioButtonFor(model => model.Etat, "1") Valide</div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Enregistrement" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<input type="hidden" value="3" id="window" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
