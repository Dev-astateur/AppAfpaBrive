@model ReflectionIT.Mvc.Paging.PagingList<AppAfpaBrive.Web.ModelView.AnnuaireModelView.ContactModelView>
@using ReflectionIT.Mvc.Paging
@addTagHelper *, ReflectionIT.Mvc.Paging

<nav aria-label="structure navigation">
    @await this.Component.InvokeAsync("Pager", new { paginglist = this.Model })
</nav>



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Selectionner des contacts à associer</h2>
        </div>

        <form method="get" class="form-inline">
            <input name="filter" class="form-control" placeholder="filtre" value="@Model.RouteValue["filter"]" />

        </form>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        @Html.SortableHeaderFor(model => model.TitreCivilite)
                    </th>
                    <th>
                        @Html.SortableHeaderFor(Model => Model.Nom)
                    </th>
                    <th>
                        @Html.SortableHeaderFor(model => model.Prenom)
                    </th>
                    <th>
                        @Html.SortableHeaderFor(model => model.Mail)
                    </th>
                    <th>
                        @Html.SortableHeaderFor(model => model.Telephone)
                    </th>
                    <th>
                        Selectionner
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr id="ligne" class="model">
                        <td>@obj.TitreCivilite.TitreCiviliteAbrege</td>
                        <td>@obj.Nom</td>
                        <td>@obj.Prenom</td>
                        <td>@obj.Mail</td>
                        <td>@obj.Telephone</td>
                        <td>
                            <input asp-for="@obj.IsChecked" type="checkbox" class="form-check-label" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    }
    else
    {
        <p> Il n'y a pas de contacts</p>
    }

    <div class="form-group">
        <input id="submitAddContact" type="submit" value="Create" class="btn btn-primary" />
    </div>

    <nav aria-label="structures navigation example">
        <vc:pager paging-list="@Model" />
    </nav>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


    <script>

        $(document).ready(() {


            $('#submitAddContact').click(function () {
                var json = '';

                $.each("#model"), function (i, item) {
                    if ($(this).find(('input[type=checkbox]:checked')).length > 0) {

                        alert()
                    }
                }
            });



    </script>
}


