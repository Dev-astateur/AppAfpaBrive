@model ReflectionIT.Mvc.Paging.PagingList<AppAfpaBrive.BOL.AnnuaireSocial.Contact>
@using ReflectionIT.Mvc.Paging
@addTagHelper *, ReflectionIT.Mvc.Paging

<nav aria-label="structure navigation">
    @await this.Component.InvokeAsync("Pager", new { paginglist = this.Model })
</nav>



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Liste des contacts</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="GestionAnnuaire" asp-action="CreateContact" class="btn btn-primary">
                <i class="fas fa-plus-square"></i> &nbsp; Ajouter un nouveau contact
            </a>
            <a asp-controller="GestionAnnuaire" asp-action="LigneAnnuaires">Retour</a>
        </div>
        <form method="get" class="form-inline">
            <input name="filter" class="form-control" placeholder="filtre" value="@Model.RouteValue["filter"]" />

        </form>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        @Html.SortableHeaderFor(model => model.TitreCivilite)
                    </th>
                    <th>
                        @Html.SortableHeaderFor(Model => Model.Nom)
                    </th>
                    <th>
                        @Html.SortableHeaderFor(model => model.Prenom)
                    </th>
                    <th>
                        @Html.SortableHeaderFor(model => model.Mail)
                    </th>
                    <th>
                        @Html.SortableHeaderFor(model => model.Telephone)
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr id="ligne">
                    <td>@obj.TitreCivilite.TitreCiviliteAbrege</td>
                    <td>@obj.Nom</td>
                    <td>@obj.Prenom</td>
                    <td>@obj.Mail</td>
                    <td>@obj.Telephone</td>

                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="GestionAnnuaire" asp-route-Id="@obj.IdContact" asp-action="EditContact" class="btn btn-primary">
                                <i class="fas fa-edit"></i> Modifier
                            </a>
                            <a asp-controller="GestionAnnuaire" asp-route-Id="@obj.IdContact" asp-action="DeleteContact" class="btn btn-danger" onclick="return confirm('Confirmer')">
                                <i class="fas fa-trash"></i> Supprimer
                            </a>
                        </div>
                    </td>

                </tr>
                }
            </tbody>
        </table>

    }
    else
    {
<p> Il n'y a pas de contacts</p>
    }

    <nav aria-label="structures navigation example">
        <vc:pager paging-list="@Model" />
    </nav>

</div>

