@model List<AppAfpaBrive.Web.ModelView.EntrepriseListViewModel>

@{
    ViewData["Title"] = "ListeEntreprisePourModification";
}

<h1>Liste entreprises pour modification</h1>


<form asp-controller="Entreprise" asp-action="ListeEntreprisePourModification">
    <div class="container">
        <div class="row">

            <div class="col-sm-4">
                <p>Recherche par numéro de département: </p>
                <p>
                    <input type="search" placeholder=" département" value="@ViewData["GetDepartement"]" name="departement" />

                </p>
            </div>
            <div class="col-sm-4">
                <p>Recherche par l'intitulé de l'offre de formation: </p>
                <p>
                    <input type="search" placeholder=" formation" value="@ViewData["GetProduitForm"]" name="formation" />


                </p>
            </div>
            <div class="col-sm-4">
                <input type="submit" value="Rechercher" class="btn btn-primary" />
            </div>

        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
              Raison sociale
            </th>
            <th>
                Numéro de SIRET
            </th>           
            <th>
               Adresse
            </th>         
            <th>
               Ville
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RaisonSociale)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroSiret)
            </td>         
            <td>
                @Html.DisplayFor(modelItem => item.Ligne1Adresse)
            </td>          
            <td>
                @Html.DisplayFor(modelItem => item.Ville)
            </td>        
            <td>
                <a asp-action="ModifierEntreprise" asp-route-id="@item.IdEntreprise">Modifier</a> |
                <a asp-action="Details" asp-route-id="@item.IdEntreprise">Details</a> |
                <a asp-action="SuppressionEntreprise" asp-route-id="@item.IdEntreprise">Supprimer</a> |

                @*@Html.ActionLink("Supprimer", "SupprimerEntreprise", new { id = item.RaisonSociale })*@
            </td>
        </tr>
}
    </tbody>
</table>
