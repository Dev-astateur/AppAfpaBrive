@model List<AppAfpaBrive.Web.ModelView.EntrepriseListViewModel>

@{
    ViewData["Title"] = "ListeEntreprise";
}
<h2>Entrez les deux chiffres du département: </h2>
<form asp-controller="Entreprise" asp-action="ListeEntreprise">
    <p>
        <input type="search" placeholder=" département" value=" @ViewData["GetEmployeedetails"]" name="departement" />
        <input type="submit" value="Rechercher" class="btn btn-primary" />
    </p>
</form>
<h2>Entrez l'intitulé de l'offre de formation: </h2>
    <form asp-controller="Entreprise" asp-action="ListeEntreprise">
        <p>
            <input type="search" placeholder=" formation" value=" @ViewData["GetEmployeedetails"]" name="formation" />
            <input type="submit" value="Rechercher" class="btn btn-primary" />
        </p>
    </form>



<table class="table">
    <thead>
        <div class="row">
            <tr>

                <div class="col-md-3">
                    <th>
                        Raison sociale
                    </th>
                </div>
                <div class="col-md-3">
                    <th>
                        E-Mail
                    </th>
                </div>
                <div class="col-md-3">
                    <th>
                        Téléphone
                    </th>
                </div>
                <div class="col-md-3">
                    <th>
                        Ville
                    </th>
                </div>

            </tr>
        </div>

    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <div class="row">
                <tr>
                    <div class="col-md-3">
                        <td>
                            @Html.DisplayFor(modelItem => item.RaisonSociale)
                        </td>
                    </div>
                    <div class="col-md-3">
                        <td>
                            @Html.DisplayFor(modelItem => item.MailEntreprise)
                        </td>
                    </div>
                    <div class="col-md-3">
                        <td>
                            @Html.DisplayFor(modelItem => item.TelEntreprise)
                        </td>
                    </div>
                    <div class="col-md-3">
                        <td>
                            @Html.DisplayFor(modelItem => item.Ville)
                        </td>
                    </div>
                    @*


                        <td>
                            <a asp-action="Edit" asp-route-id="@item.IdEntreprise">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.IdEntreprise">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.IdEntreprise">Delete</a>
                        </td>*@
                </tr>
            </div>
        }

    </tbody>
</table>
