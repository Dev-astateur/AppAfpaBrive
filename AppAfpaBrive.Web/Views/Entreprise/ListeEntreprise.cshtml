@model IEnumerable<AppAfpaBrive.BOL.Entreprise>

@{
    ViewData["Title"] = "ListeEntreprise";
}

<h1>ListeEntreprise</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RaisonSociale)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroSiret)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MailEntreprise)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TelEntreprise)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ligne1Adresse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ligne2Adresse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ligne3Adresse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodePostal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ville)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Idpays2Navigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RaisonSociale)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroSiret)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MailEntreprise)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TelEntreprise)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ligne1Adresse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ligne2Adresse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ligne3Adresse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodePostal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ville)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Idpays2Navigation.Idpays2)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdEntreprise">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdEntreprise">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdEntreprise">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
