@model List<AppAfpaBrive.BOL.Professionnel>


<form method="post" class="text-center">
    <div>
        <h2 class="text-info">
            Veuillez sélectionner votre tuteur et votre résponsble juridique.
        </h2>
    </div>
    <div class="row justify-content-center">
        @if (Model.Count() > 0)
        {
            int i = 0;
            <table class="table table-responsive" style="width:50%">
                <thead>
                    <tr>
                        <th>
                            Nom:
                        </th>
                        <th>
                            Prénom:
                        </th>
                        <th>
                            Tuteur:
                        </th>
                        <th>
                            Responsable juridique:
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr id="ligne">
                            <td width="15%">
                                @item.NomProfessionnel
                            </td>
                            <td width="15%">
                                @item.PrenomProfessionnel
                            </td>
                            <td width="10%">
                                @Html.RadioButton("tuteur", item.IdProfessionnel)
                                @*<input type="button" class="btn btn-primary w-100" value="Sélectionner"></input>*@
                            </td>
                            <td width="10%">
                                @Html.RadioButton("Responsable", item.IdProfessionnel)
                                @*<input type="button" class="btn btn-primary w-100" value="Sélectionner "></input>*@
                            </td>

                        </tr>
                        i++;
                    }
                </tbody>
            </table>
        }
        else
        {
            <p> Personne de connue dans la base de donnée.</p>
        }
    </div>
    <div>
        <a asp-action="Entreprise_recap" class="btn btn-success"><i class="fas fa-sign-out-alt"></i> retour</a>
        <a asp-action="Professionel_Creation" class="btn btn-success"><i class="fas fa-sign-out-alt"></i> Ajouter une nouvelle reference</a>
        <input class="btn btn-primary" type="submit" value="Valider" />
    </div>
</form>