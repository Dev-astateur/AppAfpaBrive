@model AppAfpaBrive.BOL.Entreprise


<div class="border p-3">
    <div class="form-group row">
        <h2 class="text-info pl-3">Information de l'entreprise</h2>
    </div>
    <div class="row">
        <div class="col-8">
            <div class="form-group row">
                <div class="col-8">
                    <label class="col-4"> Siret: </label>
                    <label class="col-4">@Model.NumeroSiret</label>
                </div>
                <div class="col-8">
                    <label class="col-4"> Raison sociale: </label>
                    <label class="col-4">@Model.RaisonSociale </label>
                </div>
                <div class="col-8">
                    <label class="col-4"> Ville: </label>
                    <label class="col-4">@Model.Ville </label>
                </div>
                <div class="col-8">
                    <label class="col-4"> Code Postal: </label>
                    <label class="col-4">@Model.CodePostal </label>
                </div>
                <div class="col-8">
                    <label class="col-4"> Adresse: </label>
                    <label class="col-4">@Model.Ligne1Adresse </label>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4 row">

                    <div class="col">
                        <input type="submit" class="btn btn-info w-100" value="Update" />
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
