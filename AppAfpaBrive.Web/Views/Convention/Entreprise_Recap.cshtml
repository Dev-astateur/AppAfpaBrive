@model AppAfpaBrive.BOL.Entreprise


<div class="border border-info p-3 rounded">
    <div class="form-group row">
        <h2 class="text-info pl-3">Information de l'entreprise</h2>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="form-group row">
                <div class="col-12">
                    <h6 class="col-12 text-info"> Siret: @Model.NumeroSiret </h6>
                </div>
                <div class="col-12">
                    <h6 class="col-12 text-info"> Raison sociale: @Model.RaisonSociale</h6>
                </div>
                <div class="col-12">
                    <h6 class="col-12 text-info"> Ville: @Model.Ville</h6>
                </div>
                <div class="col-12">
                    <h6 class="col-12 text-info"> Code Postal: @Model.CodePostal</h6>
                </div>
                <div class="col-12">
                    <h6 class="col-12 text-info"> Adresse: @Model.Ligne1Adresse</h6>
                </div>
                <div class="col-12">
                    <h6 class="col-12 text-info"> Adresse suite: @Model.Ligne2Adresse</h6>
                </div>
                <div class="col-12">
                    <label class="col-12 text-info"> Adresse suite: @Model.Ligne3Adresse</label>
                </div>
                <div class="col-12">
                    <label class="col-12 text-info"> Télephone: @Model.TelEntreprise</label>
                </div>
                <div class="col-12">
                    <label class="col-12 text-info"> Mail: @Model.MailEntreprise</label>
                </div>

            </div>
            <div class="form-group row">
                <div class="col-8 offset-4 row">
                    <div class="col">
                        <a asp-action="entreprise" class="btn btn-success w-100 m-2"><i class="fas fa-sign-out-alt"></i> Retour</a>
                    </div>
                    <div class="col">
                        <a asp-action="Professionel" class="btn btn-info w-100 m-2" ><i class="fas fa-sign-out-alt"></i> Continuer</a>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>
