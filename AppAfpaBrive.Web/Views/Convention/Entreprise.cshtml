@model AppAfpaBrive.Web.ModelView.Entreprise_Siret

<form method="post">
    <div class="border border-info rounded p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Entrer le Siret de votre entreprise</h2>
        </div>
        <div class="row">
            <div class="col-12">

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="NumeroSiret" class="text-info"> Siret:</label>
                    </div>
                    <div class="col-10">
                        <input asp-for="NumeroSiret" id="Siret" class="form-control" />
                        <span asp-validation-for="NumeroSiret" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Retour</a>
                        </div>
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Valider" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
