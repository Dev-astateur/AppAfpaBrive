@model AppAfpaBrive.Web.ModelView.Professionnel_ModelView

<form method="post">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Veuillez remplir les informations suivantes afin d'ajouter les references:</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-md-4 p-2">
                        <h5> Civilité:</h5>
                    </div>
                    <div class="col-md-8 p-2">
                        <label>
                            Homme: @Html.RadioButtonFor(m => m.CodeTitreCiviliteProfessionnel, 0) Femme: @Html.RadioButtonFor(m => m.CodeTitreCiviliteProfessionnel, 1)
                        </label>
                        <span asp-validation-for="CodeTitreCiviliteProfessionnel" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 p-2">
                        <h5> Nom:</h5>
                    </div>
                    <div class="col-md-8 p-2">
                        <input asp-for="NomProfessionnel" class="form-control" />
                        <span asp-validation-for="NomProfessionnel" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 p-2">
                        <h5> Prénom: </h5>
                    </div>
                    <div class="col-md-8 p-2">
                        <input asp-for="PrenomProfessionnel" class="form-control" />
                        <span asp-validation-for="PrenomProfessionnel" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 p-2">
                        <h5> Adresse Mail: </h5>
                    </div>
                    <div class="col-md-8 p-2">
                        <input asp-for="AdresseMail" class="form-control" />
                        <span asp-validation-for="AdresseMail" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 p-2">
                        <h5> Numeros de Tel: </h5>
                    </div>
                    <div class="col-md-8 p-2">
                        <input asp-for="NumerosTel" class="form-control" />
                        <span asp-validation-for="NumerosTel" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 p-2">
                        <h5> Fonction: </h5>
                    </div>
                    <div class="col-md-8 p-2">
                        <input asp-for="Fonction" class="form-control" />
                        <span asp-validation-for="Fonction" class="text-danger"></span>
                    </div>
                    @*<label>Responsable: </label>
                        @Html.RadioButtonFor(m => m.bool_responsable, 0)
                        <label>Tuteur: </label>
                        @Html.RadioButtonFor(m => m.bool_Tuteur, 1)*@

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <a asp-action="Professionel" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Retour</a>
                        </div>
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Ajouter" />
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
