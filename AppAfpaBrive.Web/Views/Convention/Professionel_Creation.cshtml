@model AppAfpaBrive.Web.ModelView.Entreprise_Creation_ViewModel

<form method="post">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Votre entreprise n'est pas dans la base de donnée. Veuiller remplir les données</h2>
        </div>
        <div class="row">
            <div class="col-8">

                <div class="form-group row">
                    <div class="col-md-4 p-2">
                        <label asp-for="NumeroSiret"> Siret</label>
                    </div>
                    <div class="col-md-8 p-2">
                        <input asp-for="NumeroSiret" class="form-control" />
                        <span asp-validation-for="NumeroSiret" class="text-danger"></span>
                    </div>
                    

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Ajouter" />
                        </div>
                        <div class="col">
                            <a asp-action="Professionel" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Retour</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
