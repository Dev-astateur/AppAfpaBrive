@model AppAfpaBrive.Web.Models.Creation_convention


<form method="post">


    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Récapitulatif de votre convention de stage: </h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-12">
                        <label class="col-4"> Etablissement </label>
                        <label class="col-6">@Model.Etablissement</label>
                    </div>
                    <div class="col-12">
                        <label class="col-4"> Raison sociale: </label>
                        <label class="col-6">@Model.Formation </label>
                    </div>
                    <div class="col-12">
                        <label class="col-4"> Entreprise </label>
                        <label class="col-6">@Model.Entreprise_raison_social </label>
                    </div>
                    <div class="col-12">
                        <label class="col-4"> Siret: </label>
                        <label class="col-6">@Model.Siret</label>
                    </div>
                    <div class="col-12">
                        <label class="col-4"> Tuteur: </label>
                        <label class="col-6">@Model.TuteurNom @Model.TuteurPrenom </label>
                    </div>
                    <div class="col-12">
                        <label class="col-4"> Responsable: </label>
                        <label class="col-6">@Model.ResponsableNom @Model.ResponsablePrenom </label>
                        <input type="date" asp-for="@Model.IdResponsable" hidden="hidden" />
                    </div>
                    @foreach (var item in ViewBag.dates)
                    {
                        <div class="col-12">
                            <label class="col-4"> Date de Début du stage: </label>
                            <label class="col-6">@item.Date1 </label>
                        </div>
                        <div class="col-12">
                            <label class="col-4"> Date de fin du stage: </label>
                            <label class="col-6">@item.Date2 </label>
                        </div>
                    }
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <a asp-action="date" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Retour</a>
                        </div>
                        <div class="col">
                            <input type="submit" class="btn btn-primary" value="Terminer" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>