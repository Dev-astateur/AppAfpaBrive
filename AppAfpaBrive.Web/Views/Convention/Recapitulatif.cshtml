<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

@model AppAfpaBrive.Web.Models.FilesModelConvention;

<div class="border p-3">
    <div class="form-group row">
        <h2 class="text-info pl-3">Récapitulatif de votre convention de stage: </h2>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="form-group row">
                <div class="col-12">
                    <label class="col-4"> Etablissement </label>
                    <label class="col-6">@ViewBag.convention.Etablissement</label>
                </div>
                <div class="col-12">
                    <label class="col-4"> Raison sociale: </label>
                    <label class="col-6">@ViewBag.convention.Formation </label>
                </div>
                <div class="col-12">
                    <label class="col-4"> Entreprise </label>
                    <label class="col-6">@ViewBag.convention.Entreprise_raison_social </label>
                </div>
                <div class="col-12">
                    <label class="col-4"> Siret: </label>
                    <label class="col-6">@ViewBag.convention.Siret</label>
                </div>
                <div class="col-12">
                    <label class="col-4"> Tuteur: </label>
                    <label class="col-6">@ViewBag.convention.TuteurNom @ViewBag.convention.TuteurPrenom </label>
                </div>
                <div class="col-12">
                    <label class="col-4"> Responsable: </label>
                    <label class="col-6">@ViewBag.convention.ResponsableNom @ViewBag.convention.ResponsablePrenom </label>
                </div>
                @foreach (var item in ViewBag.dates)
                {
                    <div class="col-12">
                        <label class="col-4"> Date de début: </label>
                        <label class="col-6">@item.Date1.ToString("yyyy-MM-dd") </label>
                    </div>
                    <div class="col-12">
                        <label class="col-4"> Date de fin: </label>
                        <label class="col-6">@item.Date2.ToString("yyyy-MM-dd") </label>
                    </div>
                }
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4 row">


                </div>
            </div>
        </div>
    </div>
    <div>
        <div>
            <h5 class="text-info">
                Vous pouvez rajouter des documents:
            </h5>
        </div>
        <form method="post"
              enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="file" multiple="multiple" />
            <span asp-validation-for="file" class="text-danger"></span>
            <div class="text-center m-1">
                <a asp-action="date" class="btn btn-info m-2"> Retour</a>
            </div>
            <div class="text-center m-1">
                <input class="btn btn-success m-2" type="submit" value="Terminer" />
            </div>
        </form>
    </div>
</div>



@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}