@*@model IEnumerable<AppAfpaBrive.BOL.Etablissement>*@
@model ReflectionIT.Mvc.Paging.PagingList<AppAfpaBrive.BOL.CollaborateurAfpa>
@using ReflectionIT.Mvc.Paging
@addTagHelper *, ReflectionIT.Mvc.Paging

@{
    ViewData["Title"] = "Index";
}

<nav aria-label="ProduitFormation navigation">
    @await this.Component.InvokeAsync("Pager", new { paginglist = this.Model })
</nav>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Liste des Etablissements </h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="CollaborateurAfpa" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus-square"></i> &nbsp; Créer un CollaborateurAfpa
            </a>
        </div>
        <form method="get" class="form-inline">
            <input name="filter" class="form-control" placeholder="filtre(NomCollaborateur)" value="@Model.RouteValue["filter"]" />
            @*<button type="submit" class="btn btn-info">
                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Search
                </button>*@
        </form>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        @Html.SortableHeaderFor(Model => Model.MatriculeCollaborateurAfpa)
                    </th>
                    <th>
                        @Html.SortableHeaderFor(model => model.IdEtablissement)
                    </th>
                    <th>
                        @Html.SortableHeaderFor(model => model.CodeTitreCivilite)
                    </th>
                    <th>
                        @Html.SortableHeaderFor(model => model.NomCollaborateur)
                    </th>
                    <th>
                        @Html.SortableHeaderFor(model => model.PrenomCollaborateur)
                    </th>
                    <th>
                        @Html.SortableHeaderFor(model => model.MailCollaborateurAfpa)
                    </th>
                    <th>
                        @Html.SortableHeaderFor(model => model.TelCollaborateurAfpa)
                    </th>
                    <th>
                        @Html.SortableHeaderFor(model => model.Uo)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr id="ligne">
                    <td width="10%">@obj.MatriculeCollaborateurAfpa</td>
                    <td width="10%">@obj.IdEtablissement</td>
                    <td width="20%">@obj.CodeTitreCiviliteNavigation.TitreCiviliteComplet</td>
                    <td width="10%">@obj.NomCollaborateur</td>
                    <td width="20%">@obj.PrenomCollaborateur</td>
                    <td width="10%">@obj.MailCollaborateurAfpa</td>
                    <td width="10%">@obj.TelCollaborateurAfpa</td>
                    <td width="10%">@obj.Uo</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="CollaborateurAfpa" asp-route-Id="@obj.MatriculeCollaborateurAfpa" asp-action="Edit" class="btn btn-primary">
                                <i class="fas fa-edit"></i> Modifier
                            </a>
                            @*<a asp-controller="CollaborateurAfpa" asp-route-Id="@obj.MatriculeCollaborateurAfpa" asp-action="Delete" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Supprimer
                            </a>*@
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>

    }
    else
    {
        <p> Il n'y a pas de produits de formation</p>
    }

</div>